{port_specs, [{"priv/libsecp256k1_nif.so",["c_src/libsecp256k1_nif.c"]}]}.

{port_env, [{"DRV_CFLAGS",  "$DRV_CFLAGS -O3 -I c_src/secp256k1 -I c_src/secp256k1/src"},
